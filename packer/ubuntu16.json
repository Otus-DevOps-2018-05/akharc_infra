{
    "variables": {
	    "prj_id" : "",
	    "source_img" : "",
	    "vm_type" : "f1-micro"
	    "dsk_size":"10",
	    "dsk_type":"",
	    "tag":"puma-server",
	    "net": "default",
	    "img_descr": "Image with preinstalled ruby and mongodb puma app"
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `prj_id`}}",
            "image_name": "reddit-base-{{timestamp}}",
            "image_family": "reddit-base",
            "source_image_family": "{{user `source_img`}}",
            "zone": "europe-west1-b",
            "ssh_username": "appuser",
            "machine_type": "{{user `vm_type`}}"
	    "dsk_size": "{{user `dsk_size`}}",
            "dsk_type": "{{user `dsk_type`}}",
            "tags": "{{user `tag`}}",
            "network": "{{user `net`}}",
            "image_description": "{{user `img_descr`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        }    
    ]	
}
